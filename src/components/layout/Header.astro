---
// 定義導航項目
const navItems = [
    { name: "Portfolio", href: "/#portfolio" },
    { name: "Services", href: "/#services" },
    { name: "About", href: "/#about" },
];
---

<header
    class="fixed w-full top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-800 transition-colors duration-300"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex-shrink-0 flex items-center">
                <a
                    href="/"
                    class="text-2xl font-bold font-mono tracking-tighter group"
                >
                    <span
                        class="text-primary-600 group-hover:text-primary-500 transition-colors"
                        >[K]</span
                    >-LAB
                </a>
            </div>

            <nav class="hidden md:flex space-x-8">
                {
                    navItems.map((item) => (
                        <a
                            href={item.href}
                            class="nav-link text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                        >
                            {item.name}
                        </a>
                    ))
                }
            </nav>

            <div class="md:hidden">
                <button
                    type="button"
                    class="p-2 text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200"
                >
                    <span class="sr-only">Open menu</span>
                    <svg
                        class="h-6 w-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                        ></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</header>

<script>
    document.addEventListener("astro:page-load", () => {
        document.querySelectorAll('a[href^="/#"]').forEach((anchor) => {
            anchor.addEventListener("click", (e) => {
                const href = anchor.getAttribute("href");
                if (!href) return;

                // 如果當前已經在首頁 (pathname 為 '/' 或空)
                if (
                    window.location.pathname === "/" ||
                    window.location.pathname === ""
                ) {
                    e.preventDefault(); // 阻止瀏覽器預設跳轉

                    const id = href.replace("/", ""); // 取得 #id (例如 #portfolio)
                    const target = document.querySelector(id);

                    if (target) {
                        // 1. 原生平滑捲動
                        target.scrollIntoView({ behavior: "smooth" });
                        // 2. 手動更新 URL (History API)，保持狀態一致但不刷新
                        history.pushState(null, "", id);
                    }
                }
                // 若不在首頁，什麼都不做，讓 <a href> 正常運作觸發 Astro 路由跳轉
            });
        });
    });
</script>
