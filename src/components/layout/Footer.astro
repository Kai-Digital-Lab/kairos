---
const lang = Astro.currentLocale || "en";
const year = new Date().getFullYear();

const translations = {
    en: {
        privacy: "Privacy Policy",
        terms: "Terms of Service",
    },
    "zh-tw": {
        privacy: "隱私權政策",
        terms: "服務條款",
    },
};

const t = translations[lang] || translations.en;
---

<footer
    class="bg-white dark:bg-slate-900 text-slate-600 dark:text-slate-400 py-12 border-t border-slate-200 dark:border-slate-800 transition-colors duration-300"
>
    <div
        class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-6"
    >
        <div>
            <span
                class="text-xl font-bold text-slate-900 dark:text-white tracking-tighter"
                >Kai Digital Lab</span
            >
            <p class="text-sm mt-2 flex flex-wrap items-center gap-1">
                &copy; {year} by&nbsp;
                <a
                    href="https://github.com/kevin828"
                    class="hover:text-primary-600 dark:hover:text-white transition-colors"
                    >Kevin Hsieh</a
                >
                &nbsp;is licensed under&nbsp;
                <a
                    href="https://creativecommons.org/licenses/by-nc-nd/4.0/"
                    class="hover:text-primary-600 dark:hover:text-white transition-colors"
                    >CC BY-NC-ND 4.0</a
                >
                <span class="inline-flex items-center gap-0.5 ml-1 opacity-80">
                    <img
                        src="https://mirrors.creativecommons.org/presskit/icons/cc.svg"
                        alt="CC"
                        class="h-4 w-4"
                    />
                    <img
                        src="https://mirrors.creativecommons.org/presskit/icons/by.svg"
                        alt="BY"
                        class="h-4 w-4"
                    />
                    <img
                        src="https://mirrors.creativecommons.org/presskit/icons/nc.svg"
                        alt="NC"
                        class="h-4 w-4"
                    />
                    <img
                        src="https://mirrors.creativecommons.org/presskit/icons/nd.svg"
                        alt="ND"
                        class="h-4 w-4"
                    />
                </span>
            </p>
        </div>
        <div class="flex items-center gap-6 text-sm font-medium">
            <a
                href="#"
                class="hover:text-primary-600 dark:hover:text-white transition-colors"
                >{t.privacy}</a
            >
            <a
                href="#"
                class="hover:text-primary-600 dark:hover:text-white transition-colors"
                >{t.terms}</a
            >
            <a
                href="#"
                class="hover:text-primary-600 dark:hover:text-white transition-colors"
                >LinkedIn</a
            >
            <a
                href="#"
                class="hover:text-primary-600 dark:hover:text-white transition-colors"
                >GitHub</a
            >
        </div>
    </div>
</footer>
