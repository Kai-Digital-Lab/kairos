---
interface Props {
    variant?: "neutral" | "success" | "warning" | "error" | "info" | "primary";
    size?: "sm" | "md";
    class?: string;
    [key: string]: any;
}

const {
    variant = "neutral",
    size = "md",
    class: className,
    ...rest
} = Astro.props;

const baseStyles =
    "inline-flex items-center justify-center rounded-full font-bold transition-colors duration-200 whitespace-nowrap";

const variants = {
    neutral:
        "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300 border border-transparent",
    success:
        "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400 border border-transparent dark:border-green-900",
    warning:
        "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400 border border-transparent dark:border-yellow-900",
    error: "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400 border border-transparent dark:border-red-900",
    info: "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400 border border-transparent dark:border-blue-900",
    primary:
        "bg-primary-100 text-primary-800 dark:bg-primary-900/30 dark:text-primary-400 border border-transparent dark:border-primary-900",
};

const sizes = {
    sm: "px-2 py-0.5 text-[10px]",
    md: "px-2.5 py-0.5 text-xs",
};

const classes = [baseStyles, variants[variant], sizes[size], className].join(
    " ",
);
---

<span class={classes} {...rest}>
    <slot />
</span>
