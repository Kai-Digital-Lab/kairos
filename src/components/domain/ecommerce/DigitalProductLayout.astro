---

<div
    class="bg-indigo-50 dark:bg-slate-950 min-h-screen transition-colors duration-300"
>
    <!-- Header -->
    <div class="bg-indigo-900 dark:bg-indigo-950 text-white py-12 px-6">
        <div class="max-w-4xl mx-auto">
            <Badge
                variant="neutral"
                class="!bg-indigo-700 dark:!bg-indigo-800 !text-indigo-100 dark:!text-indigo-200"
            >
                {t.tag}
            </Badge>
            <h2 class="text-4xl font-bold mt-4 mb-6">
                {contentFocus.title}
            </h2>
            <div
                class="flex flex-wrap items-center gap-6 text-sm text-indigo-200 dark:text-indigo-300"
            >
                <span>{t.stats[0]}</span>
                <span>{t.stats[1]}</span>
                <span>{t.stats[2]}</span>
            </div>
        </div>
    </div>

    <!-- Content Area -->
    <div class="max-w-4xl mx-auto px-6 -mt-8 pb-20">
        <Card
            variant="default"
            class="!bg-white dark:!bg-slate-900 rounded-xl !shadow-xl overflow-hidden !border-indigo-100 dark:!border-slate-800 p-0"
        >
            {
                contentFocus.showPlayer && (
                    <div class="aspect-video bg-black flex items-center justify-center relative group cursor-pointer">
                        <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center backdrop-blur-sm group-hover:scale-110 transition-transform">
                            <div class="w-0 h-0 border-t-[10px] border-t-transparent border-l-[20px] border-l-white border-b-[10px] border-b-transparent ml-1" />
                        </div>
                        <p class="absolute bottom-4 left-4 text-white font-medium">
                            {t.preview}
                        </p>
                    </div>
                )
            }

            <div class="p-8">
                <!-- CTA Section -->
                <div
                    class="flex flex-col md:flex-row justify-between items-center mb-8 pb-8 border-b border-gray-100 dark:border-slate-800 gap-4 md:gap-0"
                >
                    <div class="text-center md:text-left">
                        <p
                            class="text-3xl font-bold text-gray-900 dark:text-white"
                        >
                            $99.00
                        </p>
                        <p class="text-gray-500 dark:text-gray-400 text-sm">
                            {t.payment}
                        </p>
                    </div>
                    <Button
                        variant="primary"
                        class="!bg-indigo-600 hover:!bg-indigo-700 text-white px-8 py-3 rounded-lg font-bold text-lg w-full md:w-auto"
                    >
                        {contentFocus.primaryCTA}
                    </Button>
                </div>

                <!-- Curriculum -->
                <h3
                    class="font-bold text-gray-900 dark:text-white text-xl mb-4"
                >
                    {t.curriculum}
                </h3>
                <div class="space-y-2">
                    {
                        [1, 2, 3, 4].map((unit) => (
                            <Card
                                variant="hover"
                                class="flex flex-row items-center justify-between !p-4 !bg-gray-50 dark:!bg-slate-800 rounded hover:!bg-indigo-50 dark:hover:!bg-slate-700 cursor-pointer group border-none shadow-none"
                            >
                                <div class="flex items-center gap-3">
                                    <div class="w-6 h-6 rounded-full border border-indigo-300 flex items-center justify-center text-xs text-indigo-600 font-bold group-hover:bg-indigo-600 group-hover:text-white transition-colors">
                                        {unit}
                                    </div>
                                    <span class="font-medium text-gray-700 dark:text-gray-200">
                                        {t.unit} {unit}: {t.topic}
                                    </span>
                                </div>
                                <span class="text-gray-400 dark:text-gray-500 text-sm">
                                    15:00
                                </span>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </Card>
    </div>
</div>
