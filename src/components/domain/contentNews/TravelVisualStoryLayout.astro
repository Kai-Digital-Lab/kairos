---
import type { ISubThemeDetail } from "@/types/Theme";
import Button from "@/components/common/Button.astro";
import Card from "@/components/common/Card.astro";

interface Props {
    theme: ISubThemeDetail;
}

const { theme } = Astro.props;
const { contentFocus } = theme;
const lang = Astro.currentLocale || "en";

const t = {
    en: {
        guide: "The Ultimate Guide",
        intro: '"We traveled 4,000 miles across the rugged coastline to find the hidden gems that tourists often miss. Here is what we discovered."',
        cove: "Hidden Cove",
        coveDesc:
            "Accessible only by a narrow trail, this cove offers crystal clear waters and untouched sands. Best visited at sunrise.",
        read: "Read Full Guide",
        peak: "The Peak",
        peakDesc:
            "A challenging 4-hour hike rewards you with a panoramic view that stretches for miles. Don't forget your camera.",
        map: "View Trail Map",
        openMap: "Open Interactive Map",
    },
    "zh-tw": {
        guide: "終極指南",
        intro: "「我們沿著崎嶇的海岸線行駛了4000英里，尋找遊客經常錯過的隱藏寶石。這是我們的發現。」",
        cove: "隱秘海灣",
        coveDesc:
            "只能通過狹窄的小徑到達，這個海灣提供水晶般清澈的海水和未受破壞的沙灘。最適合日出時造訪。",
        read: "閱讀完整指南",
        peak: "山頂",
        peakDesc:
            "具有挑戰性的4小時徒步，獎勵你的是綿延數英里的全景視野。別忘了帶相機。",
        map: "查看步道地圖",
        openMap: "開啟互動地圖",
    },
}[lang] || {
    guide: "",
    intro: "",
    cove: "",
    coveDesc: "",
    read: "",
    peak: "",
    peakDesc: "",
    map: "",
    openMap: "",
};
---

<div
    class="bg-blue-50 dark:bg-blue-900 text-blue-900 dark:text-white font-serif transition-colors duration-300 min-h-screen"
>
    <!-- Immersive Hero -->
    <div class="h-screen max-h-[700px] relative overflow-hidden">
        <img
            src="https://picsum.photos/1920/1080?random=travel"
            alt="Landscape"
            class="w-full h-full object-cover"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-blue-50 via-transparent to-transparent dark:from-blue-900"
        >
        </div>
        <div class="absolute bottom-20 left-0 w-full text-center px-4">
            <span
                class="text-cyan-600 dark:text-cyan-400 uppercase tracking-[0.5em] text-sm font-sans mb-4 block font-bold"
                >{t.guide}</span
            >
            <h2
                class="text-5xl md:text-7xl font-bold mb-6 drop-shadow-lg text-blue-900 dark:text-white"
            >
                {contentFocus.title}
            </h2>
            <div class="w-24 h-1 bg-cyan-500 dark:bg-cyan-400 mx-auto"></div>
        </div>
    </div>

    <div class="max-w-5xl mx-auto px-6 py-16">
        <p
            class="text-xl md:text-2xl leading-relaxed text-blue-800 dark:text-blue-100 text-center mb-16 font-light"
        >
            {t.intro}
        </p>

        <div class="grid md:grid-cols-2 gap-12 items-center mb-20">
            <div class="order-2 md:order-1">
                <h3
                    class="text-3xl font-bold mb-4 text-cyan-700 dark:text-cyan-200"
                >
                    {t.cove}
                </h3>
                <p
                    class="text-blue-700 dark:text-blue-200 leading-relaxed mb-6"
                >
                    {t.coveDesc}
                </p>
                <Button
                    variant="outline"
                    class="!border-cyan-600 !text-cyan-700 hover:!bg-cyan-100 dark:!border-cyan-400 dark:!text-cyan-400 dark:hover:!bg-cyan-900 px-6 py-2"
                >
                    {t.read}
                </Button>
            </div>
            <div
                class="order-1 md:order-2 h-80 rounded-lg overflow-hidden shadow-2xl shadow-blue-200 dark:shadow-cyan-900/50 transform rotate-2 hover:rotate-0 transition-transform duration-500"
            >
                <img
                    src="https://picsum.photos/600/600?random=cove"
                    alt="Cove"
                    class="w-full h-full object-cover"
                />
            </div>
        </div>

        <div class="grid md:grid-cols-2 gap-12 items-center mb-20">
            <div
                class="h-80 rounded-lg overflow-hidden shadow-2xl shadow-blue-200 dark:shadow-cyan-900/50 transform -rotate-2 hover:rotate-0 transition-transform duration-500"
            >
                <img
                    src="https://picsum.photos/600/600?random=mountain"
                    alt="Mountain"
                    class="w-full h-full object-cover"
                />
            </div>
            <div>
                <h3
                    class="text-3xl font-bold mb-4 text-cyan-700 dark:text-cyan-200"
                >
                    {t.peak}
                </h3>
                <p
                    class="text-blue-700 dark:text-blue-200 leading-relaxed mb-6"
                >
                    {t.peakDesc}
                </p>
                <Button
                    variant="outline"
                    class="!border-cyan-600 !text-cyan-700 hover:!bg-cyan-100 dark:!border-cyan-400 dark:!text-cyan-400 dark:hover:!bg-cyan-900 px-6 py-2"
                >
                    {t.map}
                </Button>
            </div>
        </div>

        {
            contentFocus.showMapEmbeds && (
                <Card
                    variant="default"
                    class="!bg-blue-100 dark:!bg-blue-800 p-4 rounded-xl !shadow-inner border-none"
                >
                    <div class="bg-blue-200 dark:bg-blue-950 h-96 w-full rounded flex items-center justify-center relative overflow-hidden group">
                        <img
                            src="https://picsum.photos/1000/500?random=map"
                            alt="Map"
                            class="w-full h-full object-cover opacity-50 grayscale group-hover:grayscale-0 transition-all"
                        />
                        <div class="absolute inset-0 flex items-center justify-center">
                            <Button
                                variant="secondary"
                                class="font-bold hover:!bg-gray-100 shadow-lg px-8 py-3"
                            >
                                {t.openMap}
                            </Button>
                        </div>
                    </div>
                </Card>
            )
        }

        <div class="text-center mt-16">
            <Button
                variant="primary"
                class="!bg-cyan-600 hover:!bg-cyan-700 dark:!bg-cyan-500 dark:hover:!bg-cyan-600 text-white px-12 py-4 rounded-full font-sans tracking-wide shadow-lg font-bold text-lg"
            >
                {contentFocus.primaryCTA}
            </Button>
        </div>
    </div>
</div>
