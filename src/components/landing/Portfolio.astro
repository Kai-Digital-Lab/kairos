---
import ProjectModal from "@/components/design-system/molecules/ProjectModal.astro";
import type { ProjectData } from "@/stores/portfolio.store";

const lang = Astro.currentLocale || "en";

const translations = {
    en: {
        sectionTitle: "Selected Works",
        sectionSubtitle:
